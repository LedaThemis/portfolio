---
import Footer from "../../components/Tahira/Footer.astro";
import HoshAlBayaaSVG from "../../components/Tahira/HoshAlBayaaSVG.astro";
import HoshAlBayaaDarkSVG from "../../components/Tahira/HoshAlBayaaDarkSVG.astro";

export interface Props {
  showFooter?: boolean;
}

const { showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Al-Tahira Churches</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
    />
    <!-- INTER FONT -->
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <!-- PP NEUE MONTREAL FONT  -->
    <link
      href="https://fonts.cdnfonts.com/css/pp-neue-montreal"
      rel="stylesheet"
    />
    <!-- BOOTSTRAP ICONS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- BOOTSTRAP CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="min-h-screen flex flex-col p-[var(--padding-main)]">
    <nav>
      <div
        class="flex flex-row gap-4 justify-between items-center h-[var(--navbar-height)]"
      >
        <div>
          <a href="/al-tahira-church">
            <HoshAlBayaaSVG />
          </a>
        </div>
        <div class="flex flex-col gap-2 sm:flex-row items-center sm:gap-4">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
            aria-label="Toggle navigation"
          >
            <i class="bi bi-list"></i>
          </button>
        </div>
        <div
          class="offcanvas offcanvas-top overflow-auto"
          tabindex="-1"
          id="offcanvasNavbar"
          aria-labelledby="offcanvasNavbarLabel"
        >
          <div
            class="mb-[72px] flex flex-row gap-4 justify-between items-center"
          >
            <div>
              <HoshAlBayaaDarkSVG />
            </div>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="offcanvas"
              aria-label="Close"
            >
              <i class="text-white bi bi-x-lg"></i>
            </button>
          </div>
          <div>
            <div
              class="navbar-nav justify-content-end flex-grow-1 pe-3 text-white"
            >
              <div class="border-t border-[var(--border-main)]"></div>
              <div
                class="mt-[30px] md:mt-[40px] flex flex-col lg:grid lg:grid-cols-3"
              >
                <div class="flex flex-col gap-4 col-start-1">
                  <div>
                    <a
                      class="primary-font text-[24px] md:text-[36px] font-semibold"
                      href="/al-tahira-church"
                    >
                      Home
                    </a>
                  </div>
                  <div>
                    <a
                      class="primary-font text-[24px] md:text-[36px] font-semibold"
                      href="/al-tahira-church/timeline"
                    >
                      Timeline
                    </a>
                  </div>
                  <div>
                    <a
                      class="primary-font text-[24px] md:text-[36px] font-semibold"
                      href="/al-tahira-church/models"
                    >
                      Models
                    </a>
                  </div>
                  <div>
                    <a
                      class="primary-font text-[24px] md:text-[36px] font-semibold"
                      href="/al-tahira-church/walkthrough"
                    >
                      Virtual Walkthrough
                    </a>
                  </div>
                  <div>
                    <a
                      class="primary-font text-[24px] md:text-[36px] font-semibold"
                      href="/al-tahira-church/about"
                    >
                      About
                    </a>
                  </div>
                </div>
                <div
                  class="border-t my-[30px] md:my-[40px] border-[var(--border-main)] lg:hidden"
                >
                </div>
                <div class="flex flex-col gap-10 lg:col-start-3">
                  <div class="flex flex-col gap-6">
                    <p class="secondary-font text-2xl font-medium">
                      Digitalizing Al-Tahira Churches Collection 1862 CE
                    </p>
                    <p>
                      Al-Tahira Churches are a collection of churches that date
                      back to 1862 CE, this project aims to digitalize two
                      churches, the orthodox church (1895 CE) and the catholic
                      church (1862 CE).
                    </p>
                  </div>
                  <div
                    class="flex flex-col-reverse sm:flex-row gap-4 items-center"
                  >
                    <div>
                      <img
                        src="/assets/daad_logo.png"
                        alt="DAAD Logo"
                        class="h-[100px]"
                      />
                    </div>
                    <div>
                      <img
                        src="/assets/pih_logo.png"
                        alt="Project Innovation Hub Logo"
                        class="h-[100px]"
                      />
                    </div>
                    <div>
                      <img
                        src="/assets/uomosul_logo.png"
                        alt="University of Mosul Logo"
                        class="h-[100px]"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="grow flex flex-col justify-between">
      <main class="grow flex flex-col">
        <slot />
      </main>
      {showFooter && <Footer />}
    </div>
    <style>
      :root {
        --bg-dark: #121212;
        --bg-primary: #eceae4;
        --bg-secondary: #dbd8ce;
        --padding-main: 42px;
        --navbar-height: 46px;
        --border-main: #2a2929;
        --text-secondary: #9e9d9b;
        font-family: Inter, sans-serif;
        font-feature-settings: "liga" 1, "calt" 1; /* fix for Chrome */
      }

      @supports (font-variation-settings: normal) {
        :root {
          font-family: InterVariable, sans-serif;
        }
      }

      body {
        background-color: var(--bg-primary);
      }

      #offcanvasNavbar {
        min-height: 100vh;
        background-color: var(--bg-dark);
        padding: var(--padding-main);
      }
    </style>
    <style is:global>
      .primary-font {
        font-family: "Inter Display", Arial, Helvetica, sans-serif;
      }

      .secondary-font {
        font-family: "PP Neue Montreal", "Inter Display", Arial, Helvetica,
          sans-serif;
      }
    </style>
    <script is:inline defer src="/_vercel/insights/script.js"></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
