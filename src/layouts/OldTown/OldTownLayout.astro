---
import "../../styles/global.css";

import Footer from "../../components/OldTown/Footer.astro";


export interface Props {
  showFooter?: boolean;
}

const { showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Old City of Mosul</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boldonse&family=Readex+Pro:wght@160..700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col">
    <nav class="z-10">
      <div
        class="px-8 py-4 flex flex-col gap-4 md:flex-row justify-between items-center"
      >
        <div>
          <h1 class="primary-font text-4xl font-bold mt-2 flex gap-2 items-center">
            <img src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/old-town/assets/logo" class="w-16 h-16" alt="">
            <p>Old Mosul</p>
          </h1>
        </div>
        <div class="flex flex-col gap-2 sm:flex-row items-center sm:gap-4">
          <div>
            <a href="/old-town"> Home</a>
          </div>
          <div>
            <a href="/old-town/timeline"> Timeline</a>
          </div>
          <div>
            <a href="/old-town/models"> Models</a>
          </div>
          <div>
            <a href="/old-town/walkthrough"> Virtual Walkthrough</a>
          </div>
          <div>
            <a href="/old-town/about"> About</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="grow flex flex-col justify-between">
      <main class="px-8 grow flex flex-col">
        <slot />
      </main>
      {showFooter && <Footer />}
    </div>
    <style>
      body {
        font-family: "Readex Pro", Arial, Helvetica, sans-serif;
        background-color: #e9dfe0;
      }

      .primary-font {
        font-family: 'Readex Pro';
      }
    </style>
    <script is:inline defer src="/_vercel/insights/script.js"></script>
  </body>
</html>
