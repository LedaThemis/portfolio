---
import IraqMarshesLayout from "../../layouts/IraqMarshes/IraqMarshesLayout.astro";
---

<IraqMarshesLayout>
  <div class="flex flex-col w-full mb-8">
    <div>
      <h2 class="text-2xl md:text-3xl text-center my-8">Virtual Walkthrough</h2>
    </div>

    <div class="flex flex-col items-center">
      <iframe
        class="panorama"
        src="https://www.theasys.io/viewer/J1M7OJuFfVTctPA961Z3pD6kfwBvQV"
        allowfullscreen="true"
        frameborder="0"
        scrolling="no"
        allow="vr;gyroscope;accelerometer"
        style="border:none;"></iframe>
    </div>
  </div>

  <style>
    .panorama {
      width: 300px;
      height: 225px;
    }

    @media (min-width: 420px) {
      .panorama {
        width: 400px;
        height: 300px;
      }
    }

    @media (min-width: 640px) {
      .panorama {
        width: 600px;
        height: 450px;
      }
    }

    @media (min-width: 768px) {
      .panorama {
        width: 700px;
        height: 525px;
      }
    }

    @media (min-width: 1024px) {
      .panorama {
        width: 800px;
        height: 600px;
      }
    }

    @media (min-width: 1280px) {
      .panorama {
        width: 1000px;
        height: 750px;
      }
    }
  </style>
</IraqMarshesLayout>
