---
import IraqMarshesLayout from "../../layouts/IraqMarshes/IraqMarshesLayout.astro";
---

<IraqMarshesLayout>
  <div class="px-4 py-6">
    <h2 class="text-2xl md:text-3xl text-center mb-3">Virtual Walkthrough</h2>
    <p class="text-sm md:text-base text-center text-gray-700 max-w-3xl mx-auto">
      Explore the Iraqi Marshes through this immersive 360Â° virtual tour. Navigate through different locations using hotspots and experience the unique landscape and biodiversity of this UNESCO World Heritage site.
    </p>
  </div>
  <div class="flex flex-col w-full h-screen mb-16">
    <div class="flex flex-col items-center flex-1">
      <iframe
        class="panorama"
        src="https://www.theasys.io/viewer/J1M7OJuFfVTctPA961Z3pD6kfwBvQV"
        allowfullscreen="true"
        frameborder="0"
        scrolling="no"
        allow="vr;gyroscope;accelerometer"
        style="border:none;"></iframe>
    </div>
  </div>
  <style>
    .panorama {
      width: 100vw;
      height: 100vh;
    }
  </style>
</IraqMarshesLayout>
