---
import IraqMarshesLayout from "../../layouts/IraqMarshes/IraqMarshesLayout.astro";
---

<IraqMarshesLayout>
  <div class="flex flex-col w-full mb-8 px-4 max-w-7xl mx-auto">
    <div>
      <h2 class="text-2xl md:text-3xl text-center my-8">Gallery</h2>
    </div>
    <div>
      <h3 class="text-xl md:text-2xl text-center my-6">Biodiversity</h3>
      <p class="text-sm md:text-base text-center text-gray-700 mb-6 max-w-3xl mx-auto">The Iraqi Marshes are home to a rich diversity of wildlife, including migratory birds, waterfowl, and endemic species that depend on this unique wetland ecosystem.</p>
    </div>
    <div class="swiper biodiversity-carousel w-full max-w-5xl mx-auto">
      <div class="swiper-wrapper">
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/chlxkvfc6u6vyfghmvco" alt="Eurasian Coot">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Eurasian Coot</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">A water bird with distinctive white frontal shield</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/uinxvxdulunognbt2i3z" alt="Mallard">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Mallard (M & F)</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Common dabbling duck species found in wetlands</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/royl6ghh5uxzdcl7ezwc" alt="Water Buffalo">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Water Buffalo</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Large domesticated bovid integral to marsh life</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/vmtffuj3ha8fz0qgxqim" alt="Black Francolin">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Black Francolin</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Game bird species inhabiting marsh edges</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/abgqdfsavnahf4wmetgs" alt="Wigeon">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Wigeon</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Migratory duck species wintering in the marshes</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/ajx5dubnlycy5peuyy2f" alt="Water Hen">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Water Hen</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Common moorhen found in marsh vegetation</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex flex-col items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full relative">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/vmtffuj3ha8fz0qgxqim" alt="Northern Pintail">
            <div class="absolute top-0 left-0 text-white px-2 py-1 sm:px-4 sm:py-2 bg-black bg-opacity-60 max-w-[80%]">
              <p class="text-base sm:text-lg md:text-xl font-semibold">Northern Pintail</p>
              <p class="text-xs sm:text-sm md:text-base mt-1">Elegant duck with distinctive long tail feathers</p>
            </div>
          </div>
        </div>
        <div class="swiper-slide flex items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/u440dypcbljwjf3ffmem" alt="">
          </div>
        </div>
        <div class="swiper-slide flex items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/i6mq2pftlrie1xynyxga" alt="">
          </div>
        </div>
        <div class="swiper-slide flex items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/fclunmf2ayavoc3nwrwj" alt="">
          </div>
        </div>
        <div class="swiper-slide flex items-center justify-center">
          <div class="overflow-hidden rounded-lg w-full">
            <img class="h-[300px] sm:h-[400px] md:h-[500px] w-full object-contain object-center" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/gp5fovglzb0zlvzaxgzg" alt="">
          </div>
        </div>
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
    </div>
    <div>
      <h3 class="text-xl md:text-2xl text-center my-6">Before and After</h3>
      <p class="text-sm md:text-base text-center text-gray-700 mb-6 max-w-3xl mx-auto">Severe drought and water management challenges have dramatically transformed the marshes. Drag the slider to compare the landscape before and after the drought.</p>
    </div>
    <div class="flex flex-col items-center mb-8">
      <img-comparison-slider class="w-full max-w-5xl">
      <img class="w-full" slot="first" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/duhkjfzmbwhynuk3t6es" />
      <img class="w-full" slot="second" src="https://res.cloudinary.com/dj08db9y2/image/upload/f_auto,q_auto/v1/iraq-marshes/gallery/rwkqynwp5z45bn1vtukv" />
      </img-comparison-slider>
    </div>
  </div>
  <style>
    .biodiversity-carousel {
      padding: 0 40px;
    }
    
    .biodiversity-carousel .swiper-button-next,
    .biodiversity-carousel .swiper-button-prev {
      color: black;
    }
    
    .biodiversity-carousel .swiper-pagination-bullet-active {
      background: black;
    }
    
    @media (max-width: 640px) {
      .biodiversity-carousel {
        padding: 0 30px;
      }
      
      .biodiversity-carousel .swiper-button-next,
      .biodiversity-carousel .swiper-button-prev {
        width: 30px;
        height: 30px;
      }
      
      .biodiversity-carousel .swiper-button-next:after,
      .biodiversity-carousel .swiper-button-prev:after {
        font-size: 20px;
      }
    }
  </style>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
  <script
  is:inline
  defer
  src="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/index.js"
  ></script>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/styles.css"
  />
  <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      new Swiper('.biodiversity-carousel', {
        slidesPerView: 1,
        spaceBetween: 20,
        loop: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: true,
          pauseOnMouseEnter: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        breakpoints: {
          640: {
            slidesPerView: 1,
            spaceBetween: 20,
          },
          1024: {
            slidesPerView: 1,
            spaceBetween: 24,
          },
        },
      });
    });
  </script>
</IraqMarshesLayout>
