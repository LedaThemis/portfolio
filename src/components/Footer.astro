---
import config from "../config";
---

<footer class="my-4 flex justify-between items-center">
  <p class="font-title">&copy; 2022 Leda</p>
  <nav aria-label="Bottom Navigation" class="flex gap-4">
    <a
      href={config.portfolio.github}
      target="_blank"
      rel="noreferrer noopener"
      class="font-title text-gray-500 hover:text-gray-900 transition-colors duration-150"
      >Source Code <span class="sr-only">(opens in new tab)</span>
    </a>
    <a
      href={config.personal.github}
      target="_blank"
      rel="noreferrer noopener"
      class="font-title text-gray-500 hover:text-gray-900 transition-colors duration-150"
      >Github <span class="sr-only">(opens in new tab)</span>
    </a>
  </nav>
</footer>
