---
import type { IProject } from '../lib/interfaces/Project';
import ProjectContent from './ProjectDetail/ProjectContent.astro';
import ProjectHeader from './ProjectDetail/ProjectHeader.astro';
import ProjectLinks from './ProjectDetail/ProjectLinks.astro';
import ProjectTechnologies from './ProjectDetail/ProjectTechnologies.astro';

export interface Props {
  project: IProject['data'];
}

const { project } = Astro.props;
---

<section class="mt-8 flex flex-col gap-6">
  <ProjectHeader name={project.attributes.name} description={project.attributes.description} />
  <ProjectTechnologies technologies={project.attributes.technologies} />
  <ProjectLinks name={project.attributes.name} source={project.attributes.source} demo={project.attributes.demo} />
  <ProjectContent content={project.attributes.content} />
</section>
