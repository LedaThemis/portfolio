---
import type { IProject } from "../../lib/interfaces/Project";

export interface Props {
  name: IProject["data"]["attributes"]["name"];
  description: IProject["data"]["attributes"]["description"];
}

const { name, description } = Astro.props;
---

<header>
  <h2 class="text-5xl md:text-6xl font-title font-bold py-4">{name}</h2>
  <p class="text-lg font-body">{description}</p>
</header>
